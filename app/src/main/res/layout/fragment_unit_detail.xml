<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UnitDetail.UnitDetailFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameLong_txt"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre Completo"
        android:padding="2dp"
        app:layout_constraintEnd_toStartOf="@id/nameShort_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/TextField_Input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gramos" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameShort_txt"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="Nombre Corto"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/TextField_Input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="g" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sellMult_txt"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Multiplicador Venta"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="@id/nameLong_txt"
        app:layout_constraintStart_toStartOf="@id/nameLong_txt"
        app:layout_constraintTop_toBottomOf="@id/nameLong_txt">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/TextField_Input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sellUnit_txt"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Unid Venta"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="@id/nameShort_txt"
        app:layout_constraintStart_toStartOf="@id/nameShort_txt"
        app:layout_constraintTop_toBottomOf="@id/nameLong_txt">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/TextField_Input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kg" />
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>