<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:id="@+id/layCenter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtName_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Chocolate de Taza"
                android:textSize="30sp"
                app:autoSizeTextType="uniform"
                android:maxLines="1" />

            <TextView
                android:id="@+id/txtName_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Chocolate de Taza"
                android:textSize="20sp"
                app:autoSizeTextType="uniform"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layRight"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtPrice_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:gravity="right|center_vertical"
                android:text="$1,200.00"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAmount_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:gravity="right|center_vertical"
                android:text="10 kg"
                android:textSize="16sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkAdded"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="0dp"
            android:gravity="center_vertical" />
    </LinearLayout>

</androidx.cardview.widget.CardView>