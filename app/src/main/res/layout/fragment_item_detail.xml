<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ItemDetailFragment" >

    <ImageView
        android:id="@+id/img_det"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/default_item"
        app:layout_constraintBottom_toBottomOf="@+id/txtTot_det"
        app:layout_constraintEnd_toStartOf="@id/txtAmount_det"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtName_det" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtName_det"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:padding="2dp"
        app:endIconDrawable="@drawable/icon_pick_32"
        app:endIconMode="custom"
        app:endIconTint="@color/select1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/TextField_Head1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:text="Aceite de Oliva" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtAmount_det"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Cantidad"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtName_det"
        app:suffixText="kg">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/TextField_Input1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="10" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtPrice_det"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Precio Unitario"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txtAmount_det"
        app:layout_constraintTop_toBottomOf="@id/txtAmount_det"
        app:suffixText="$/kg">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/TextField_Input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtTot_det"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Precio Total"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txtPrice_det"
        app:layout_constraintTop_toBottomOf="@id/txtPrice_det"
        app:suffixText="$">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/TextField_Input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtModel_det"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Modelo"
        android:padding="2dp"
        app:endIconDrawable="@drawable/icon_pick_32"
        app:endIconMode="custom"
        app:endIconTint="@color/select1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_det">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/TextField_Input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:text="Galletitas Crackers x10ud y sigue de largo" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtSku_det"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="SKU"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtModel_det">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/TextField_Input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:text="100200310" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>